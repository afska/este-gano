{
	"name": "éste-ganó",
	"version": "1.0",
	"description": "Encode secret messages by using ![this syntax]",
	"permissions": ["background", "tabs"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["bundle.js", "content.js"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "icon_off.png"
	},
	"icons": {
		"16": "icon_on.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"manifest_version": 2
}
